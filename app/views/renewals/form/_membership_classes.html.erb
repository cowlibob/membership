<fieldset class="flex flex-col items-stretch space-y-4">
	<legend class="sr-only">Membership Class</legend>
	<% Renewal.membership_classes.each do |key, membership_class| %>
		<div class="">
			<label
				for="renewal_membership_class_<%= membership_class[:ui_id] %>"
				class="flex cursor-pointer items-center justify-between gap-4 rounded-lg border border-gray-100 bg-white p-4 text-sm font-medium shadow-sm hover:border-gray-200 has-[:checked]:border-blue-500 has-[:checked]:ring-1 has-[:checked]:ring-blue-500"
			>
				<div>
					<p class="text-gray-900 font-bold text-xl"><%= membership_class[:title] %></p>
					<p class="text-gray-600"><%= membership_class[:description] %></p>
					<p class="text-gray-600"><%= membership_class[:feature_1] %></p>
					<p class="text-gray-600"><%= membership_class[:feature_2] %></p>

				</div>

				<p class="text-gray-900 text-xl"><%= number_to_currency(membership_class[:cost], unit: "£") %></p>

				<%= f.radio_button :membership_class, membership_class[:ui_id], class: "sr-only" %>
