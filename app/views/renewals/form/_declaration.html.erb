<section class="mb-16" id="panel8">
    <h1 class="text-2xl"><%= renewal_step_title %></h1>
    <div class="content" data-section-content>
        <p>
        <h3>Data Protection</h3>
        <%= s('data protection') %>
        </p>
        <p>
        <h3>Insurance</h3>
        <p>
            <%= s('insurance') %>
        </p>
        <p>
            If appropriate, tick
            <%= f.check_box :share_data_for_commission, required: false, disabled: @renewal.is_paid? %>
            <%= f.label :share_data_for_commission, s('commission label'), class: 'inline' %>
        </p>
        </p>
        <p>
        <h3>Declaration</h3>
        <p data-required="true">
            <%= f.check_box :declaration_confirmed, required: true, disabled: @renewal.is_paid? %>
            <%= f.label :declaration_confirmed, s('declaration label'), class: 'inline' %>
        </p>

        </p>
    </div>
</section>