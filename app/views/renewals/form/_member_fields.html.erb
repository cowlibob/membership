<div class="flex flex-row">
    <% if defined?(index) %>
    <div class="flex flex-col justify-between">
        <div class="duplicate-number member-number text-8xl font-bold numeral text-gray-300">
            <%= index %>
        </div>
        <a 
            href="#" 
            class="duplicate-remove <%= f.object.persisted? ? '' : 'hidden' %> inline-block my-4 bg-red-700 px-8 py-2 rounded-md text-sm text-white"
            data-action="click->duplicate-fields#remove"
        >
            Remove
        </a>
    </div>
    <% end %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%= f.hidden_field '_destroy', value: false, class: "duplicate-fields-destroy" %>
        <%= f.hidden_field :id %>
        <div class="p-4 md:w-full">
            <%= f.label :first_name, class: 'block' %>
            <%= f.text_field :first_name, required: required, class: 'block md:w-full', disabled: @renewal.is_paid? %>
        </div>
        <div class="p-4 md:w-full">
            <%= f.label :last_name, class: 'block' %>
            <%= f.text_field :last_name, required: required, class: 'block md:w-full', disabled: @renewal.is_paid? %>
        </div>
        <div class="p-4 md:w-full">
            <%= f.label :phone, class: 'block' %>
            <%= f.text_field :phone, required: required, class: 'block md:w-full', disabled: @renewal.is_paid? %>
        </div>
        <div class="p-4 md:w-full">
            <%= f.label :email, class: 'block' %>
            <%= f.text_field :email, required: required, class: 'block md:w-full', disabled: @renewal.is_paid? %>
        </div>
        <%
=begin%>
        <div class="p-4 md:w-full">
            <%= f.label :dob, class: 'block' %>
            <%= f.text_field :dob, class: 'block md:w-full', disabled: @renewal.is_paid? %>
        </div>
        <%
=end%>
        <div class="p-4 md:w-full">
            <%= f.label :dob, "Year of Birth", class: 'block' %>
            <%= f.select :dob, (0..100).map {|d| [Date.today.year - d, Date.today.year - d]}, class: 'block md:w-full', prompt: true, disabled: @renewal.is_paid? %>
        </div>
    </div>
</div>
