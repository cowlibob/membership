		<div class="row">
			<div class="large-6 columns">
				<table>
					<% @renewal.line_item_rows.each do |row| %>
						<tr>
							<td><%= row.first %></td>
							<td><%= number_to_currency(row.second, unit: "£") %></td>
						</tr>
					<% end %>
					<tr class="text-left">
						<th>Total</th>
						<th><%= number_to_currency(@renewal.total_cost, unit: "£") %></th>
