<div class="row" id="new-boat">
	<div class="large-6 columns">
		<%= f.label :classname %>
		<%= f.text_field :classname%>
	</div>
	<div class="large-6 columns">
		<%= f.label :sail_number %>
		<%= f.text_field :sail_number %>
	</div>
	<div class="large-6 columns">
		<%= f.label :hull_colour %>
		<%= f.text_field :hull_colour %>
	</div>
	<div class="large-6 columns">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="large-6 columns">
		<%= f.label :berthing %>
		<%= f.select :berthing, [['Yes, store it at the club', true], ['No, I will bring it to the club when I sail', false]], :prompt => true %>
	</div>
</div>
<div class="row">
	<div class="large-2 columns">
		<a href="#" id="add-boat-field" class="button postfix">Additional Boats</a>
	</div>
</div>
<div id="boat-fields">
</div>